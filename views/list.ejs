<h1 class="display-4 step">Blog Posts</h1>
    <% posts.forEach(function(post) { %>
        <h1 class="sprite one display-6 ml-4 d-inline" ><%= post.post %></h1>
        <form action="/blog/delete" method="post" class="d-inline">
            <input type="hidden" value="<%= post.id %>" name="val">
            <input type="submit" class="btn btn-danger" value="Delete">
        </form>
        <form action="/blog/edit" method="post" class="d-inline">
            <input type="hidden" value="<%= post.id %>" name="val">
            <input type="submit" class="btn btn-info" value="Edit">
        </form>
        <!-- class="sprite one"></div> -->
        <div class="rounded bg-primary p-3" style="height: 200px;" ><%= post.text %></div>
        <hr>
    <% }); %>